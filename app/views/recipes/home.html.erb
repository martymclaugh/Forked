
<div class="contain">
  <div class="row">
  <div class="recipe-of-the-day">
    <h2 class="left">So Hot Right Now: <a href="/recipes/preview/<%= @recipe_of_the_day['id'] %>"><%= @recipe_of_the_day['title'] %></a></h2>
  </div>

  <% @recipes.each do |recipe| %>
  <li> <a href="/recipes/preview/<%= recipe['id'] %>"><img style="width:13%;" src="<%= recipe["image"] %>" alt="<%= recipe["title"] %>"><%= recipe['title'] %></a> </li>
  <p>Used Ingredients: <%= recipe["usedIngredientCount"] %></p>
  <p>Missing Ingredients: <%= recipe["missedIngredientCount"] %></p>

  <% end %>

    <% @recipes.each do |recipe| %>
    <div class="col-sm-3 col-lg-3 col-md-3">
      <div>
        <div class="thumbnail">
          <div class="caption" style="height: 550px";>
          	<div>
          		<img src="<%= recipe['image'] %>" style="width: 100%; height: auto";>
          	</div>

          	<div>
          		<small class="left">Check it out!</small>
              <h3 class="left"><a href="/recipes/preview/<%= recipe['id'] %>"><%= recipe['title'] %></a></h3>
          		<h5 class="left">
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star"></span>
                <span class="fa fa-star-half-o"></span>
                <span class="fa fa-star-o"></span>
              </h5>
          	</div>

          </div>
        </div>

        
        <br>
      </div>
    </div>
    <% end %>
  </div>
